<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPakpiTransparent"
    android:clickable="true"
    android:id="@+id/wg_main"
    android:padding="8dp">


    <LinearLayout
        android:id="@+id/lyDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="8dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:contentDescription="My Logo"
            android:src="@mipmap/ic_launcher" />

        <ImageView

            android:id="@+id/wg_full_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="28/07/2024"
            android:textColor="@color/md_theme_onSurface"
            android:textStyle="bold"
            app:cornerRadius="8dp" />


        <ImageView
            android:id="@+id/wg_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"

            android:paddingVertical="8dp"
            android:singleLine="true"
            android:text="( ဝၼ်းဢၢင်းၵၢင်း )"
            android:textAppearance="@style/WidgetTextAppearance"
            android:textColor="@color/md_theme_onSurface"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/lyDate"
        android:background="@color/md_theme_onSurface" />


    <ImageView
        android:id="@+id/wg_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lyDate"
        android:padding="8dp"
        android:text="This is sample text to load" />

    <ImageView
        android:id="@+id/wg_detail2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wg_detail"
        android:padding="8dp"
        android:text="This is sample text to load" />



</RelativeLayout>